<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action to open the notification.message model -->
    <record id="action_notification_message" model="ir.actions.act_window">
        <field name="name">Notification Messages</field>
        <field name="res_model">notification.message</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Notifications found.
            </p>
        </field>
    </record>

    <!-- Tree view for the notification.message model -->
    <record id="view_notification_message_tree" model="ir.ui.view">
        <field name="name">notification.message.tree</field>
        <field name="model">notification.message</field>
        <field name="arch" type="xml">
            <tree string="Notification Messages" editable="bottom" default_order="create_date desc">
                <field name="name"/>
                <field name="message"/>
                <field name="notification_type"
                       decoration-success="notification_type == 'success'"
                       decoration-danger="notification_type == 'error'"
                       widget="badge"
                />
                <field name="create_date" string="Date Created"/>
            </tree>
        </field>
    </record>

    <!-- Form view for the notification.message model (Read-Only) -->
    <record id="view_notification_message_form" model="ir.ui.view">
        <field name="name">notification.message.form</field>
        <field name="model">notification.message</field>
        <field name="arch" type="xml">
            <form string="Notification Message" readonly="1">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="message" readonly="1"/>
                        <!-- Form view with badge widget and default success/danger classes -->
                        <field name="notification_type"
                               decoration-success="notification_type == 'success'"
                               decoration-danger="notification_type == 'error'"
                               widget="badge"
                        />
                        <field name="create_date" string="Date Created" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu item to access the notifications under Sales module -->
    <menuitem id="menu_notification_message_sales"
              name="Notification Messages"
              parent="sale.sale_menu_root"
              action="action_notification_message"
              sequence="16"/>
</odoo>
